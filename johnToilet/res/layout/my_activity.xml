<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal" >
    
    <TextView
       	android:id="@+id/whoIsIt"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:textSize="27sp"
        android:text="John Namu Choi" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topbox"> 
        <LinearLayout
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="vertical">
        	        <LinearLayout
            			android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:orientation="horizontal"
        				android:layout_marginTop="10dp"
        				android:layout_marginLeft="10dp">
        				<TextView 
        	    			android:id="@+id/today"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="Today: "/>
        				<TextView 
        	    			android:id="@+id/howManyDay"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="2 times"/>
             		</LinearLayout>
             		<LinearLayout
            			android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:orientation="horizontal"
        				android:layout_marginTop="5dp"
        				android:layout_marginLeft="10dp">
        				<TextView 
        	    			android:id="@+id/week"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="This week: "/>
        				<TextView 
        	    			android:id="@+id/howmanyWeek"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="17 times"/>
             		</LinearLayout>
             		<LinearLayout
            			android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:orientation="horizontal"
        				android:layout_marginTop="5dp"
        				android:layout_marginLeft="10dp">
        				<TextView 
        	    			android:id="@+id/month"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="This month: "/>
        				<TextView 
        	    			android:id="@+id/howmanyMonth"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="57 times"/>
             		</LinearLayout>
             		<LinearLayout
            			android:layout_width="wrap_content"
        				android:layout_height="wrap_content"
        				android:orientation="horizontal"
        				android:layout_marginTop="5dp"
        				android:layout_marginLeft="10dp">
        				<TextView 
        	    			android:id="@+id/last"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="Last time: "/>
        				<TextView 
        	    			android:id="@+id/whenistheLast"
       						android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
       		 				android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="14:28 Wed April 16th"/>
             		</LinearLayout>
            
        </LinearLayout>
