<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp" 
        android:background="@drawable/tableline">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            	<ImageView
       			 	android:id="@+id/image1st"
       				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true" 
        			android:layout_marginLeft="4dp"
        			android:src="@drawable/firstplace" />
            	    <LinearLayout
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentLeft="true"
            			android:layout_alignParentRight="true"
            			android:layout_marginTop="20dp"
            			android:orientation="vertical" 
          	 			android:gravity="center_horizontal">
            			<TextView
       						android:id="@+id/person1st"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="John Namu Choi" />
            			<TextView
       						android:id="@+id/howMany1st"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="12sp"
        					android:text="52 times" />
            		</LinearLayout>
            	<ImageView
        			android:id="@+id/photo1st"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentRight="true" 
        			android:layout_marginTop="2dp"
        			android:layout_marginRight="4dp"
        			android:src="@drawable/userphotobig" />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
			<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

            	<ImageView
       			 	android:id="@+id/image2nd"
       				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_marginTop="10dp" 
        			android:layout_marginLeft="4dp"
        			android:src="@drawable/secondplace" />
            	    <LinearLayout
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentLeft="true"
            			android:layout_alignParentRight="true"
            			android:layout_marginTop="20dp"
            			android:orientation="vertical" 
          	 			android:gravity="center_horizontal">
            			<TextView
       						android:id="@+id/person2nd"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="Seiya Kobayashi" />
            			<TextView
       						android:id="@+id/howMany2nd"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="12sp"
        					android:text="47 times" />
            		</LinearLayout>
            	<ImageView
        			android:id="@+id/photo2nd"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentRight="true" 
        			android:layout_marginTop="2dp"
        			android:layout_marginRight="4dp"
        			android:src="@drawable/userphotobig" />

            </RelativeLayout>
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
			<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

            	<ImageView
       			 	android:id="@+id/image3rd"
       				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_marginTop="10dp" 
        			android:layout_marginLeft="4dp"
        			android:src="@drawable/thirdplace" />
            	    <LinearLayout
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentLeft="true"
            			android:layout_alignParentRight="true"
            			android:layout_marginTop="20dp"
            			android:orientation="vertical" 
          	 			android:gravity="center_horizontal">
            			<TextView
       						android:id="@+id/person3rd"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="15sp"
        					android:text="Shawn Van Every" />
            			<TextView
       						android:id="@+id/howMany3rd"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="12sp"
        					android:text="40 times" />
            		</LinearLayout>
            	<ImageView
        			android:id="@+id/photo3rd"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentRight="true" 
        			android:layout_marginTop="2dp"
        			android:layout_marginRight="4dp"
        			android:src="@drawable/userphotobig" />

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
			<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

            	<ImageView
       			 	android:id="@+id/image4th"
       				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_marginTop="2dp" 
        			android:layout_marginLeft="4dp"
        			android:src="@drawable/fourthplace" />
            	    <LinearLayout
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentLeft="true"
            			android:layout_alignParentRight="true"
            			android:layout_marginTop="9dp"
            			android:orientation="vertical" 
          	 			android:gravity="center_horizontal">
            			<TextView
       						android:id="@+id/person4th"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="14sp"
        					android:text="Adarsh Kosuru" />
            			<TextView
       						android:id="@+id/howMany4th"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="12sp"
        					android:text="38 times" />
            		</LinearLayout>
            	<ImageView
        			android:id="@+id/photo4th"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentRight="true" 
        			android:layout_marginTop="2dp"
        			android:layout_marginRight="4dp"
        			android:src="@drawable/userphotosmall" />

            </RelativeLayout>
        </TableRow>
 
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
			<RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical" >

            	<ImageView
       			 	android:id="@+id/image5th"
       				android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_marginTop="2dp" 
        			android:layout_marginLeft="4dp"
        			android:src="@drawable/fifthplace" />
            	    <LinearLayout
            			android:layout_width="wrap_content"
            			android:layout_height="wrap_content"
            			android:layout_alignParentLeft="true"
            			android:layout_alignParentRight="true"
            			android:layout_marginTop="9dp"
            			android:orientation="vertical" 
          	 			android:gravity="center_horizontal">
            			<TextView
       						android:id="@+id/person5th"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="14sp"
        					android:text="Fedrico Burch" />
            			<TextView
       						android:id="@+id/howMany5th"
        					android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:textColor="#ffffff"
        					android:textSize="12sp"
        					android:text="28 times" />
            		</LinearLayout>
            	<ImageView
        			android:id="@+id/photo5th"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_alignParentRight="true"
        			android:layout_marginTop="2dp" 
        			android:layout_marginRight="4dp"
        			android:src="@drawable/userphotosmall" />

            </RelativeLayout>
        </TableRow>

        
    </TableLayout>

</LinearLayout>
